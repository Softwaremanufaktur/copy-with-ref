{
    "manifest_version": 2,
    "name": "selection-to-clipboard-with-ref",
    "description": "Copying with current ref to the Clipboard",
    "version": "1.1",
    "homepage_url": "https://github.com/Softwaremanufaktur/copy-with-ref",

    "icons": {
        "48": "icons/clipboard-48.png"
    },

    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["content-script.js"]
    }],
    "browser_specific_settings": {
      "gecko": {
        "id": "copy-with-ref@christian-abele.de",
        "strict_min_version": "48.0"
      }
    }
}
